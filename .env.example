# Configuration Django
SECRET_KEY=your-secret-key-here-change-in-production
DEBUG=True

# Configuration Base de données PostgreSQL (pour développement local)
DB_NAME=assuraimant
DB_USER=postgres
DB_PASSWORD=postgres
DB_HOST=localhost
DB_PORT=5432

# Optionnel: URL complète de la base de données
# DATABASE_URL=postgresql://postgres:postgres@localhost:5432/assuraimant

# Configuration Email
# Pour développement local, deux options :
# 1. Console backend (les emails s'affichent dans la console) - par défaut
EMAIL_BACKEND=console

# 2. SMTP avec MailHog (serveur SMTP local avec interface web)
# Pour utiliser MailHog, décommenter les lignes suivantes et lancer :
# docker-compose --profile mailhog up mailhog
# Puis mettre EMAIL_BACKEND=smtp
# EMAIL_BACKEND=smtp
# EMAIL_HOST=localhost
# EMAIL_PORT=1025
# EMAIL_USE_TLS=False
# EMAIL_USE_SSL=False

# Adresse email par défaut pour l'expéditeur
DEFAULT_FROM_EMAIL=noreply@assuraimant.local
SERVER_EMAIL=noreply@assuraimant.local

# Adresse email de l'administrateur (pour les erreurs)
ADMIN_EMAIL=admin@assuraimant.local

# URL du site (pour les liens dans les emails)
SITE_URL=http://localhost:8000
